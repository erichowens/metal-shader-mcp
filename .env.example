# Metal Shader MCP Environment Variables
# Copy this file to .env and fill in your actual API keys

# Brave Search API (for shader technique research)
# Get from: https://api.search.brave.com/app/keys
BRAVE_API_KEY=your_brave_api_key_here

# GitHub Personal Access Token (for version control integration)
# Get from: https://github.com/settings/tokens
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here

# Stability AI API (for texture and inspiration generation)
# Get from: https://platform.stability.ai/account/keys
STABILITY_AI_API_KEY=your_stability_ai_key_here

# HuggingFace API (for ML model access)
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_hf_token_here

# Notion API (for documentation management)
# Get from: https://www.notion.so/my-integrations
NOTION_API_KEY=your_notion_integration_token_here

# DeepSeek API (optional, for advanced reasoning)
# Get from: https://platform.deepseek.com/api_keys
DEEPSEEK_API_KEY=your_deepseek_key_here

# Project-specific settings
IMAGE_STORAGE_DIRECTORY=./Resources/generated_images
SCREENSHOT_DIRECTORY=./Resources/screenshots
BASELINE_DIRECTORY=./Resources/baselines

# GitHub configuration
GITHUB_HOST=https://github.com
GITHUB_REPO_OWNER=your_username_here
GITHUB_REPO_NAME=metal-shader-mcp

# Notion configuration
NOTION_VERSION=2022-06-28
