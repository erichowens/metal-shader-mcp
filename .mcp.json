{
  "mcpServers": {
    "memory": {
      "command": "/opt/anaconda3/envs/mcp-memory/bin/python",
      "args": ["-m", "mcp_memory_service.server"],
      "description": "Persistent memory for shader techniques and project context"
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "description": "Enhanced reasoning for complex shader algorithm development"
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "description": "Search for shader techniques, GPU optimization papers, and Metal documentation"
    },
    "github": {
      "command": "docker",
      "args": [
        "run", "-i", "--rm", 
        "-e", "GITHUB_PERSONAL_ACCESS_TOKEN",
        "-e", "GITHUB_HOST",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}",
        "GITHUB_HOST": "https://github.com"
      },
      "description": "Version control integration for shader library and project management"
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"],
      "description": "Automated screenshot capture for visual regression testing of shaders"
    },
    "hf-mcp-server": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://huggingface.co/mcp",
        "--header",
        "Authorization: Bearer ${HUGGINGFACE_API_KEY}"
      ]
    },        
    "stability-ai": {
      "command": "npx",
      "args": ["-y", "mcp-server-stability-ai"],
      "env": {
        "STABILITY_AI_API_KEY": "${STABILITY_AI_API_KEY}",
        "IMAGE_STORAGE_DIRECTORY": "./Resources/generated_images"
      },
      "description": "AI image generation for shader inspiration and texture creation"
    },
    "notionApi": {
      "command": "npx",
      "args": ["-y", "@notionhq/notion-mcp-server"],
      "env": {
        "OPENAPI_MCP_HEADERS": "{\"Authorization\": \"Bearer ${NOTION_API_KEY}\", \"Notion-Version\": \"2022-06-28\" }"
      },
      "description": "Documentation management for shader library and technique guides"
    }
  },
  "workflow": {
    "description": "Metal Shader MCP Development Workflow",
    "agents": {
      "shader_artist": {
        "mcpTools": ["stability-ai", "brave-search", "memory"],
        "description": "Creative shader development with AI assistance and technique research"
      },
      "metal_performance": {
        "mcpTools": ["brave-search", "memory", "github"],
        "description": "GPU performance optimization and Metal-specific improvements"
      },
      "code_reviewer": {
        "mcpTools": ["github", "memory"],
        "description": "Code quality assurance and version control integration"
      },
      "documentarian": {
        "mcpTools": ["notionApi", "github", "memory"],
        "description": "Documentation maintenance and knowledge management"
      },
      "quality_assessment": {
        "mcpTools": ["playwright", "github", "memory"],
        "description": "Visual testing and honest quality assessment"
      },
      "task_master": {
        "mcpTools": ["memory", "sequential-thinking"],
        "description": "Project coordination and workflow orchestration"
      }
    },
    "visualTesting": {
      "required": true,
      "tools": ["playwright"],
      "screenshotPath": "./Resources/screenshots/",
      "baselineImages": "./Resources/baselines/",
      "description": "Automated visual evidence capture following WARP protocol"
    }
  }
}
