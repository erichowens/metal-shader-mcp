{
  "name": "metal-shader-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for live Metal shader development",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "compile-shader": "xcrun -sdk macosx metal -c",
    "mcp": "stdio"
  },
  "keywords": [
    "mcp",
    "metal",
    "shader",
    "webgpu",
    "graphics"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "chokidar": "^3.6.0",
    "express": "^4.18.0",
    "ws": "^8.16.0",
    "sharp": "^0.33.0",
    "tmp": "^0.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/ws": "^8.5.0",
    "@types/tmp": "^0.2.0",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0"
  },
  "mcp": {
    "name": "Metal Shader MCP",
    "description": "Live Metal shader development and preview",
    "version": "1.0.0",
    "transport": "stdio",
    "tools": [
      "compile_shader",
      "preview_shader",
      "update_uniforms",
      "profile_performance",
      "hot_reload"
    ]
  }
}